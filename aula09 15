# recebe o numero do usario
numero = int(input("digite um numero para calcular a tabuada: "))

# calcule e imprime a tabuada do numero
print(f"tabuada do {numero}:")
for i in range(1, 11):
    print(f"{numero} x {i} = {numero * i}")

ciclos = 1
while ciclos <= 10:
    resultado = numero * ciclos
    print(f'{numero} x {ciclos} = {resultado}')

    ciclos +=1
